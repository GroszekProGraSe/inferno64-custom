#define _GNU_SOURCE

TARGMODEL=	Posix
TARGSHTYPE=	sh
CPUS=		386

O=		o
OS=		o

AR=		ar
ARFLAGS=	ruvs

AS=		cc -c 
ASFLAGS=

CC=        cc -c 
CFLAGS=    -g\
           -fno-strict-aliasing\
           -fno-aggressive-loop-optimizations\
           -Wno-incompatible-pointer-types\
           -Wno-int-to-pointer-cast\
           -Wno-pointer-to-int-cast\
           -Wno-implicit-function-declaration\
           -D_GNU_SOURCE\
           -I$ROOT/Linux/amd64/include\
           -I$ROOT/include\
           -DLINUX_AMD64

LD=        cc 
# Dodajemy muldefs, żeby linker nie pluł się, gdy podmienimy free w kodzie
# żeby w razie czego "wstrzyknąć" własne free/malloc bez błędów linkera
LDFLAGS=   -Wl,--allow-multiple-definition -z norelro

SYSLIBS= -lm

YACC=		iyacc
YFLAGS=		-d
